---
import MainLayout from "@/layouts/MainLayout.astro"
import Image from "@/components/shared/Image.astro"
import images from "@/assets/images.json"
---

<MainLayout>
  <section
    class="grid grid-cols-[repeat(auto-fit,minmax(min(300px,100%),1fr))] gap-2 p-2 md:py-12 md:px-8"
  >
    {
      images.map(image => (
        <Image
          alt={image.alt}
          fullImgSrc={image.src}
          placeholderImgSrc={image.placeholderSrc}
        />
      ))
    }
  </section>
</MainLayout>
